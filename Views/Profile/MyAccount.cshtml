@model AppUserRegisterViewModel
@{
    ViewData["Title"] = "MyAccount";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="inner-banner py-5">
    <div class="w3l-breadcrumb py-lg-5">
        <div class="container pt-4 pb-sm-4">
            <h4 class="inner-text-title pt-5">Profilim</h4>
            <ul class="breadcrumbs-custom-path">
                <li><a href="/Home/Index">Ana Səhifə</a></li>
                <li class="active"><i class="fas fa-angle-right"></i>Profilim</li>
            </ul>
           
        </div>
    </div>
</section>
<section class="w3l-servicesblock pt-lg-5 pt-4 pb-5 mb-lg-5" id="about">
    <div class="container pb-md-5 pb-4">
        <div class="row pb-xl-5 align-items-center">
                       <div class="row contact-block">
                
                <div class="col-md-14 contact-right">
                    <form method="post" class="signin-form">
                        <div class="input-grids">
                            <div class="row">
                                <input type="hidden" asp-for="Username" id="w3lSender" placeholder="Mail Adresiniz"
                                       class="contact-input" required="" />
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <img src="@ViewBag.userimage" alt="" class="img-fluid radius-image">
                                </div>
                                <div class="col-sm-6">
                                    <input type="text" asp-for="Surname" id="w3lSubect" placeholder="Soyad"
                                           class="contact-input" required="" />
                                    <input type="text" asp-for="Name" id="w3lName" placeholder="Adınız"
                                           class="contact-input" required="" />
                                    <input type="text" asp-for="ImageUrl" id="w3lSubect" placeholder="Şəkil linki"
                                           class="contact-input" required="" />
                                    <input type="email" asp-for="Email" id="w3lSender" placeholder="Mail Adresiniz"
                                           class="contact-input" required="" />
                                </div>
                            </div>
                         

                        </div>
                        <br />
                        <div class="form-input">
                            <textarea asp-for="About" id="w3lMessage" placeholder="Haqqında"
                                      required=""></textarea>
                        </div>
                        <div class="text-start">
                            <button type="submit" class="btn btn-style btn-style-3">Təsdiqlə</button>
                        </div>
                       
                    </form>
                

                </div>
            </div>

                

        </div>
    </div>

</section>

@await Component.InvokeAsync("Testimonials")

