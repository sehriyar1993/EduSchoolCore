
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section id="home" class="w3l-banner py-5">
    <div class="banner-content">
        <div class="container py-4">
            <div class="row align-items-center pt-sm-5 pt-4">
                <div class="col-md-6">
                    <h3 class="mb-lg-4 mb-3">
                        Övladlarınız Üçün<span class="d-block">Ən Yaxşı Təhsili Tövsiyə Edirik</span>
                    </h3>
                    <p class="banner-sub">Davamlı Nəzarət, Təcrübəli Müəllimlər & Kamera Nəzarəti</p>
                    <div class="d-flex align-items-center buttons-banner">
                        <a href="contact.html" class="btn btn-style mt-lg-5 mt-4">Qeydiyyatdan Keçin</a>
                    </div>
                </div>
                <div class="col-md-6 right-banner-2 text-end position-relative mt-md-0 mt-5">
                    <div class="sub-banner-image mx-auto">
                        <img src="~/Edu-School-Starter/assets/images/banner.png" class="img-fluid position-relative" alt=" ">
                    </div>
                    <div class="banner-style-1 position-absolute">
                        <div class="banner-style-2 position-relative">
                            <h4>Dayima Öyrən</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="services-w3l-block py-5" id="features">
    <div class="container py-md-5 py-4">
        <div class="title-main text-center mx-auto mb-md-5 mb-4" style="max-width:500px;">
            <p class="text-uppercase">Uğurlu Gələcəyə</p>
            <h3 class="title-style">Bizimlə Nə Əldə Edəcəksiniz</h3>
        </div>
        <div class="row">
            <div class="col-md-6 col-lg-3 d-flex align-items-stretch">
                <div class="icon-box icon-box-clr-1">
                    <div class="icon"><i class="fas fa-user-friends"></i></div>
                    <h4 class="title"><a href="#about">Təcrübəli Kollektiv</a></h4>
                    <p>Hər Bir Müəllimimiz Uzun İllərdir Pedaqoji Təcrübəyə Yiyələnib.</p>
                </div>
            </div>
            <div class="col-md-6 col-lg-3 d-flex align-items-stretch mt-md-0 mt-4">
                <div class="icon-box icon-box-clr-2">
                    <div class="icon"><i class="fas fa-book-reader"></i></div>
                    <h4 class="title"><a href="#about">Keyfiyyətli Təhsil</a></h4>
                    <p>Kembric Tehsil Sisteminə Cavab Verən Keyfiyyətli Öyrenim.</p>
                </div>
            </div>
            <div class="col-md-6 col-lg-3 d-flex align-items-stretch mt-lg-0 mt-4">
                <div class="icon-box icon-box-clr-3">
                    <div class="icon"><i class="fas fa-user-graduate"></i></div>
                    <h4 class="title"><a href="#about">Vaxtda Qənaət</a></h4>
                    <p>Sürətli Oxuma Səlist Nitq Və Öz İnkişaf Mərhələsi.</p>
                </div>
            </div>
            <div class="col-md-6 col-lg-3 d-flex align-items-stretch mt-lg-0 mt-4">
                <div class="icon-box icon-box-clr-4">
                    <div class="icon"><i class="fas fa-university"></i></div>
                    <h4 class="title"><a href="#about">Qabaqcıl Təhsil</a></h4>
                    <p>Azərbaycanın Və Dünyanın Ən Öndə gələn Universitetlərinə Qəbul.</p>
                </div>
            </div>
        </div>
    </div>
</section>
@await Component.InvokeAsync("AboutView")
@await Component.InvokeAsync("BestCourses")
